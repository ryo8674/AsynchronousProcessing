<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.uu119632.exercise12.MainActivity">

    <Button
        android:id="@+id/async_task_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/async_task_btn" />

    <Button
        android:id="@+id/post_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/post_btn" />

    <Button
        android:id="@+id/async_task_loader_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/async_task_loader_btn" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        android:src="@drawable/android_eat_apple"
        android:contentDescription="@string/image_info" />

    <Button
        android:id="@+id/reset_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reset" />

</LinearLayout>
